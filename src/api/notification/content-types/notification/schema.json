{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["info", "success", "warning", "error", "order", "review", "product", "system"],
      "default": "info"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "isImportant": {
      "type": "boolean",
      "default": false
    },
    "isAdminCreated": {
      "type": "boolean",
      "default": false
    },
    "actionUrl": {
      "type": "string"
    },
    "actionText": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "vendor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::vendor.vendor"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product"
    },
    "review": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::review.review"
    },
    "metadata": {
      "type": "json"
    }
  }
} 