{
  "kind": "collectionType",
  "collectionName": "business_categories",
  "info": {
    "singularName": "business-category",
    "pluralName": "business-categories",
    "displayName": "Business Category",
    "description": "Business categories for seller registration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "vendors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vendor.vendor",
      "mappedBy": "businessCategory"
    }
  }
}
