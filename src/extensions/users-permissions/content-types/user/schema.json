{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "description": "",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "username": {
      "type": "string",
      "unique": true,
      "minLength": 3
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "provider": {
      "type": "string"
    },
    "password": {
      "type": "password",
      "minLength": 6,
      "private": true
    },
    "resetPasswordToken": {
      "type": "string",
      "private": true
    },
    "confirmationToken": {
      "type": "string",
      "private": true
    },
    "confirmed": {
      "type": "boolean",
      "default": false
    },
    "blocked": {
      "type": "boolean",
      "default": false
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users",
      "configurable": false
    },
    "referrals": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::referral.referral",
      "mappedBy": "referrer"
    },
    "referredBy": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::referral.referral",
      "mappedBy": "referredUser"
    },
    "totalRewards": {
      "type": "decimal",
      "default": 0
    },
    "referralCount": {
      "type": "integer",
      "default": 0
    },
    "phone": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "notificationPreferences": {
      "type": "json"
    },
    "addresses": {
      "type": "json"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "fcmToken": {
      "type": "string"
    }
  }
} 